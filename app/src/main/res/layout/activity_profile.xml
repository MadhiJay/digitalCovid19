<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pp_white"
    tools:context=".activity.ProfileActivity">
    <Button
        android:id="@+id/button_menu_myprofile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_back"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
<ImageView
    android:id="@+id/profile_image_myprofile"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginTop="30dp"
    android:src="@drawable/ic_account_circle_black_24dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_name_myprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/register_activity_name_text_view_text"
        android:textColor="@color/add_event_modal_activity_login_two_button_border_color"
        app:layout_constraintTop_toBottomOf="@+id/profile_image_myprofile"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/et_name_myprofile"
        android:layout_width="300dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"

        android:enabled="false"
        android:background="@drawable/register_activity_password_edit_text_background"
        android:textColor="@color/add_event_modal_activity_login_two_button_border_color"
        android:text="@string/register_activity_name_text_view_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_myprofile"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_nic_myprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/register_activity_nic_number_text_view_text"
        android:textColor="@color/add_event_modal_activity_login_two_button_border_color"
        app:layout_constraintTop_toBottomOf="@+id/et_name_myprofile"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/et_nic_myprofile"
        android:layout_width="300dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"

        android:enabled="false"
        android:background="@drawable/register_activity_password_edit_text_background"
        android:textColor="@color/add_event_modal_activity_login_two_button_border_color"
        android:text="@string/register_activity_nic_number_text_view_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_nic_myprofile"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_mobile_myprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/register_activity_mobile_text_view_text"
        android:textColor="@color/add_event_modal_activity_login_two_button_border_color"
        app:layout_constraintTop_toBottomOf="@+id/et_nic_myprofile"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/et_mobile_myprofile"
        android:layout_width="300dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"

        android:enabled="false"
        android:background="@drawable/register_activity_password_edit_text_background"
        android:textColor="@color/add_event_modal_activity_login_two_button_border_color"
        android:text="@string/register_activity_mobile_text_view_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_mobile_myprofile"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_email_myprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/register_activity_email_text_view_text"
        android:textColor="@color/add_event_modal_activity_login_two_button_border_color"
        app:layout_constraintTop_toBottomOf="@+id/et_mobile_myprofile"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:id="@+id/et_email_myprofile"
        android:layout_width="300dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"

        android:enabled="false"
        android:background="@drawable/register_activity_password_edit_text_background"
        android:textColor="@color/add_event_modal_activity_login_two_button_border_color"
        android:text="@string/register_activity_email_text_view_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_myprofile"
        app:layout_constraintLeft_toLeftOf="parent"
       />
