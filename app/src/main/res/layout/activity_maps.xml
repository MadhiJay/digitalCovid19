<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/pp_white"
    tools:context=".activity.MapsActivity"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/menu"
        android:background="@drawable/ic_menu_green_24dp"
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="50dp"

        android:layout_gravity="start|top"
        />


<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:layout_marginTop="10dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profilesection_constraint_layout"
        android:layout_width="@dimen/home_activity_profilesection_constraint_layout_width"
        android:layout_height="@dimen/home_activity_profilesection_constraint_layout_height"
        android:layout_marginEnd="@dimen/home_activity_profilesection_constraint_layout_margin_end"


        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="16dp">

        <View
            android:id="@+id/profilesectionbackground_constraint_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/home_activity_profilesectionbackground_constraint_layout_height"
            android:layout_marginEnd="@dimen/home_activity_profilesectionbackground_constraint_layout_margin_end"
            android:background="@drawable/home_activity_profilesectionbackground_constraint_layout_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="0.97"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="14dp"/>

        <ImageView
            android:id="@+id/profile_image_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="@dimen/home_activity_profile_image_view_margin_end"
            android:background="@drawable/home_activity_profile_image_view_background"
            android:scaleType="center"
            android:src="@drawable/ic_person"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="21dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group10_constraint_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/home_activity_group10_constraint_layout_margin_start"
            android:layout_marginTop="@dimen/home_activity_group10_constraint_layout_margin_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="27dp">

            <TextView
                android:id="@+id/john_smith_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/home_activity_john_smith_text_view_text"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/home_activity_john_smith_text_view_text_size"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/safe_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_nunito_semibold"

                android:text="@string/home_activity_safe_text_view_text"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/home_activity_safe_text_view_text_size"
                android:layout_marginTop="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
</LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:padding="10dp"
        android:text="@string/keep_your_hands_clean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/image_1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"

        android:background="@drawable/english1" />
</LinearLayout>
       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:padding="10dp"
                   android:text="@string/advices_2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

               <ImageView
                   android:id="@+id/image_2"
                   android:layout_marginTop="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="300dp"

                   android:background="@drawable/english2" />
           </LinearLayout>
       </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="10dp"
                android:text="@string/advice_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/image_3"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"

                android:background="@drawable/english3" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
   </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/round_btn_pressed_li_button"
        android:layout_width="@dimen/home_activity_round_btn_pressed_li_button_width"
        android:layout_height="@dimen/home_activity_round_btn_pressed_li_button_height"
        android:layout_marginBottom="@dimen/home_activity_round_btn_pressed_li_button_margin_bottom"
        android:layout_marginEnd="@dimen/home_activity_round_btn_pressed_li_button_margin_end"

        android:src="@drawable/ic_add_white"
        android:layout_gravity="end|bottom"
        tools:layout_editor_absoluteX="286dp"
        tools:layout_editor_absoluteY="570dp"/>

    </LinearLayout>
</RelativeLayout>
</LinearLayout>

